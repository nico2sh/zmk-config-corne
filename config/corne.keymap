    Lower_layer {
      bindings = <
        &kp ESCAPE &kp NUMBER_1 &kp NUMBER_2 &kp NUMBER_3 &kp NUMBER_4 &kp NUMBER_5 &kp NUMBER_6 &kp NUMBER_7 &kp NUMBER_8 &kp NUMBER_9 &kp NUMBER_0 &trans &trans &kp EXCLAMATION &kp AT_SIGN &kp HASH &kp DOLLAR &kp PERCENT &kp CARET &kp AMPERSAND &kp ASTERISK &kp LEFT_PARENTHESIS &kp RIGHT_PARENTHESIS &trans &trans &trans &trans &trans &trans &kp ESCAPE &trans &kp LEFT_BRACE &kp RIGHT_BRACE &kp LEFT_BRACKET &kp RIGHT_BRACKET &kp BACKSLASH &trans &trans &trans &trans &trans &trans 
      >;
    };

    Raise_layer {
      bindings = <
        &kp ESCAPE &trans &trans &trans &kp HOME &kp PG_UP &trans &trans &trans &trans &trans &kp K_VOLUME_UP2 &trans &trans &trans &trans &kp END &kp PG_DN &kp LEFT &kp DOWN &kp UP &kp RIGHT &trans &kp K_MUTE2 &trans &trans &kp C_AC_CUT &kp C_AC_COPY &kp C_AC_PASTE &kp ESCAPE &trans &kp K_PLAY_PAUSE &kp K_PREVIOUS &kp K_NEXT &trans &kp K_VOLUME_DOWN2 &trans &trans &trans &trans &trans &trans 
      >;
    };

  };
};
